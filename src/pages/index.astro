---
import { Astro } from 'astro';

const url = Astro.request.url; // gets the full URL string
const submitted = url.searchParams.get('submitted') === 'true';
---

<Layout>
  <section class="hero">
    <div class="content">
      <h1>PopOff</h1>
      <p>Step into the Spotlight</p>

      {submitted ? (
        <p class="thank-you">Thanks for subscribing! ðŸŽ‰</p>
      ) : (
        <form action="https://buttondown.email/YOUR_PUBLIC_USERNAME" method="post" class="email-form">
          <input type="email" name="email" required placeholder="Enter your email" />
          <input type="hidden" name="redirect" value="https://yourdomain.com/?submitted=true" />
          <button type="submit">Subscribe</button>
        </form>
      )}
    </div>
  </section>

  <style>
    /* your existing styles here */
    .thank-you {
      font-size: 1.25rem;
      margin-top: 2rem;
      color: green;
    }
  </style>
</Layout>
