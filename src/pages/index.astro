---
import { Astro } from 'astro';
import Layout from '../layouts/Layout.astro';

const submitted = Astro.url.searchParams.get('submitted') === 'true';
---

<Layout>
  <section class="hero">
    <div class="content">
      <h1>PopOff</h1>
      <p class="tagline">Step into the Spotlight</p>

      <!-- About Section -->
      <div class="about">
        <p>
          We are a new social platform where anyone can achieve virality overnight. 
          Whether youâ€™re an artist, entrepreneur, or creator, PopOff gives you the 
          exposure you deserve. Subscribe to learn more.
        </p>
      </div>

      {submitted ? (
        <p class="thank-you">Thanks for subscribing! ðŸŽ‰</p>
      ) : (
        <form action="https://buttondown.email/popoff" method="post" class="email-form">
          <input
            type="email"
            name="email"
            required
            placeholder="Enter your email"
            autocomplete="email"
            aria-label="Email address"
          />
          <input type="hidden" name="redirect" value="https://popoffapp.io/?submitted=true" />
          <button type="submit">Subscribe</button>
        </form>
      )}
    </div>
  </section>

  <style>
    /* Full height hero section centered vertically + horizontally */
    .hero {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
    }

    .content {
      text-align: center;
      max-width: 720px;
      margin: 0 auto;
      padding: 2rem;
      font-family: 'Poppins', sans-serif;
    }

    h1 {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .tagline {
      font-size: 1.25rem;
      margin-bottom: 1rem;
      font-weight: 500;
      color: #333;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    /* Compact, lighter About section */
    .about {
      margin: 0.75rem auto 1.5rem;
      max-width: 460px;
      font-size: 0.9rem;
      color: #888;
      line-height: 1.4;
    }

    /* Smaller email form */
    .email-form {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
      margin-top: 1rem;
    }

    .email-form input[type="email"] {
      padding: 0.5rem 0.75rem;     /* smaller padding */
      width: 100%;
      max-width: 280px;            /* narrower */
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 0.9rem;           /* smaller font */
      background: #fff;
      color: #000;
    }

    .email-form button {
      padding: 0.5rem 1.25rem;     /* smaller button */
      background-color: black;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 0.9rem;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }

    .email-form button:hover {
      background-color: #333;
    }

    .thank-you {
      margin-top: 1rem;
      font-size: 1rem;
      font-weight: 600;
      color: green;
    }
  </style>
</Layout>
