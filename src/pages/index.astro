---
import { Astro } from 'astro';

// Use Astro.url (URL object) instead of Astro.request.url (string)
const submitted = Astro.url.searchParams.get('submitted') === 'true';
---

<Layout>
  <section class="hero">
    <div class="content">
      <h1>PopOff</h1>
      <p class="tagline">Step into the Spotlight</p>

      <!-- ABOUT_MARKER_v2 -->
      <div
        class="about"
        style="border:2px solid #ff007a;background:#fff6fb;padding:16px;margin:24px 0;border-radius:12px;"
      >
        <h2>What is PopOff?</h2>
        <p>
          PopOff is the social platform where creators, influencers, and rising stars can
          showcase their talent and be discovered. Whether youâ€™re an artist, entrepreneur,
          or content creator, PopOff gives you the exposure you deserve.
        </p>
      </div>

      {submitted ? (
        <p class="thank-you">Thanks for subscribing! ðŸŽ‰</p>
      ) : (
        <form action="https://buttondown.email/popoff" method="post" class="email-form">
          <input
            type="email"
            name="email"
            required
            placeholder="Enter your email"
            autocomplete="email"
            aria-label="Email address"
